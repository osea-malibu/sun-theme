<script>
  (function() {
    class ComparisonTable{{ comparison_table_block_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 5;
      }

      connectedCallback() {
        this.track = this.querySelector('.comparison-table__carousel-track-{{ comparison_table_block_id }}');
        this.prevButton = this.querySelector('[data-direction="prev"]');
        this.nextButton = this.querySelector('[data-direction="next"]');
        this.dots = this.querySelectorAll('.comparison-table__carousel-dot-{{ comparison_table_block_id }}');
        
        this.setupEventListeners();
        this.updateCarousel();
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.goToPrevSlide());
        this.nextButton.addEventListener('click', () => this.goToNextSlide());
        
        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => this.goToSlide(index));
        });
      }

      goToPrevSlide() {
        this.currentSlide = this.currentSlide > 0 ? this.currentSlide - 1 : this.totalSlides - 1;
        this.updateCarousel();
      }

      goToNextSlide() {
        this.currentSlide = this.currentSlide < this.totalSlides - 1 ? this.currentSlide + 1 : 0;
        this.updateCarousel();
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateCarousel();
      }

      updateCarousel() {
        const translateX = -this.currentSlide * 100;
        this.track.style.transform = `translateX(${translateX}%)`;
        
        this.dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });

        this.prevButton.disabled = false;
        this.nextButton.disabled = false;
      }
    }

    customElements.define('comparison-table-{{ comparison_table_block_id }}', ComparisonTable{{ comparison_table_block_id }});
  })();
</script>

