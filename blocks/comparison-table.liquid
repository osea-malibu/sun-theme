  }

  .comparison-table__carousel-dot-{{ comparison_table_block_id }}.active {
    background-color: {{ block.settings.button_color }};
  }

  @media screen and (max-width: 768px) {
    .comparison-table__desktop-{{ comparison_table_block_id }} {
      display: none;
    }

    .comparison-table__mobile-{{ comparison_table_block_id }} {
