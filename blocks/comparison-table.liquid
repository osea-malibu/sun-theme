    content: "â€¢";
    color: {{ block.settings.list_bullet_color }};
    font-size: 1.2em;
    position: absolute;
    left: 0;
    top: 0;
  }

  .comparison-table__carousel-{{ comparison_table_block_id }} {
    position: relative;
    overflow: hidden;
  }

  .comparison-table__carousel-track-{{ comparison_table_block_id }} {
    display: flex;
    transition: transform 0.3s ease;
  }

  .comparison-table__carousel-slide-{{ comparison_table_block_id }} {
    flex: 0 0 100%;
    padding: 20px;
    background-color: {{ block.settings.background_color }};
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    margin-right: 16px;
  }

  .comparison-table__carousel-slide-{{ comparison_table_block_id }}:last-child {
    margin-right: 0;
  }

  .comparison-table__carousel-item-{{ comparison_table_block_id }} {
    margin-bottom: 16px;
  }

  .comparison-table__carousel-item-{{ comparison_table_block_id }}:last-child {
    margin-bottom: 0;
  }

  .comparison-table__carousel-header-{{ comparison_table_block_id }} {
    background-color: {{ block.settings.header_background_color }};
    color: {{ block.settings.header_text_color }};
    padding: 12px;
    border-radius: {{ block.settings.border_radius }}px;
    font-weight: 600;
    font-size: {{ block.settings.header_font_size }}px;
    margin-bottom: 16px;
  }

  .comparison-table__carousel-label-{{ comparison_table_block_id }} {
    font-weight: 600;
    color: {{ block.settings.header_text_color }};
    margin-bottom: 8px;
    font-size: {{ block.settings.cell_font_size }}px;
  }

  .comparison-table__carousel-value-{{ comparison_table_block_id }} {
    color: {{ block.settings.cell_text_color }};
    font-size: {{ block.settings.cell_font_size }}px;
  }

  .comparison-table__carousel-controls-{{ comparison_table_block_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 16px;
    margin-top: 20px;
  }

  .comparison-table__carousel-button-{{ comparison_table_block_id }} {
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .comparison-table__carousel-button-{{ comparison_table_block_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .comparison-table__carousel-button-{{ comparison_table_block_id }}:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .comparison-table__carousel-dots-{{ comparison_table_block_id }} {
    display: flex;
    gap: 8px;
  }

  .comparison-table__carousel-dot-{{ comparison_table_block_id }} {
    width: 8px;
    height: 8px;
    border-radius: 50%;
