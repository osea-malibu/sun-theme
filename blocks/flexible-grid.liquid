{% assign flexible_grid_block_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .flexible-grid-{{ flexible_grid_block_id }} {
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .flexible-grid-container-{{ flexible_grid_block_id }} {
    {% if block.settings.container_width_type == 'percentage' %}
      width: {{ block.settings.container_width_percent }}%;
    {% else %}
      max-width: {{ block.settings.container_width_px }}px;
    {% endif %}
    margin: 0 auto;
    {% if block.settings.container_fit == 'fit' %}
      padding: 0 20px;
    {% endif %}
  }

  .flexible-grid-layout-{{ flexible_grid_block_id }} {
    display: grid;
    gap: {{ block.settings.grid_gap }}px;
    {% case block.settings.layout %}
      {% when 'one_column' %}
        grid-template-columns: 1fr;
      {% when 'two_columns' %}
        grid-template-columns: repeat(2, 1fr);
      {% when 'three_columns' %}
        grid-template-columns: repeat(3, 1fr);
      {% when 'four_columns' %}
        grid-template-columns: repeat(4, 1fr);
      {% when 'two_rows_two_columns' %}
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(2, auto);
      {% when 'two_rows_three_columns' %}
        grid-template-columns: repeat(3, 1fr);
        grid-template-rows: repeat(2, auto);
    {% endcase %}
  }

  .flexible-grid-item-{{ flexible_grid_block_id }} {
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    padding: {{ block.settings.item_padding }}px;
    {% if block.settings.item_border_width > 0 %}
      border: {{ block.settings.item_border_width }}px solid {{ block.settings.item_border_color }};
    {% endif %}
    {% if block.settings.item_shadow %}
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    {% endif %}
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.content_alignment }};
    text-align: {{ block.settings.text_alignment }};
    min-height: {{ block.settings.min_item_height }}px;
  }

  .flexible-grid-image-{{ flexible_grid_block_id }} {
    width: 100%;
    margin-bottom: 16px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .flexible-grid-image-{{ flexible_grid_block_id }} img {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    display: block;
  }

  .flexible-grid-image-placeholder-{{ flexible_grid_block_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .flexible-grid-image-placeholder-{{ flexible_grid_block_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .flexible-grid-heading-{{ flexible_grid_block_id }} {
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px 0;
    line-height: 1.2;
    {% case block.settings.heading_type %}
      {% when 'h1' %}
        font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
        font-size: {{ settings.type_size_h1 }}px;
        font-weight: {{ settings.type_heading_font.weight }};
        text-transform: {{ settings.type_case_h1 }};
        letter-spacing: {{ settings.type_letter_spacing_h1 }};{% when 'h2' %}
        font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
        font-size: {{ settings.type_size_h2 }}px;
        font-weight: {{ settings.type_heading_font.weight }};
        text-transform: {{ settings.type_case_h2 }};
        letter-spacing: {{ settings.type_letter_spacing_h2 }};
      {% when 'h3' %}
        font-family: {{ settings.type_heading_font.family }}, {{ settings.type_heading_font.fallback_families }};
        font-size: {{ settings.type_size_h3 }}px;
        font-weight: {{ settings.type_heading_font.weight }};
        text-transform: {{ settings.type_case_h3 }};
        letter-spacing: {{ settings.type_letter_spacing_h3 }};
      {% when 'h4' %}
        font-family: {{ settings.type_subheading_font.family }}, {{ settings.type_subheading_font.fallback_families }};
        font-size: {{ settings.type_size_h4 }}px;
        font-weight: {{ settings.type_subheading_font.weight }};
        text-transform: {{ settings.type_case_h4 }};
        letter-spacing: {{ settings.type_letter_spacing_h4 }};
      {% when 'h5' %}
        font-family: {{ settings.type_subheading_font.family }}, {{ settings.type_subheading_font.fallback_families }};
        font-size: {{ settings.type_size_h5 }}px;
        font-weight: {{ settings.type_subheading_font.weight }};
        text-transform: {{ settings.type_case_h5 }};
        letter-spacing: {{ settings.type_letter_spacing_h5 }};
      {% when 'h6' %}
        font-family: {{ settings.type_subheading_font.family }}, {{ settings.type_subheading_font.fallback_families }};
        font-size: {{ settings.type_size_h6 }}px;
        font-weight: {{ settings.type_subheading_font.weight }};
        text-transform: {{ settings.type_case_h6 }};
        letter-spacing: {{ settings.type_letter_spacing_h6 }};
      {% when 'body' %}
        font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
        font-size: {{ settings.type_size_paragraph }}px;
        font-weight: {{ settings.type_body_font.weight }};{% when 'accent' %}
        font-family: {{ settings.type_accent_font.family }}, {{ settings.type_accent_font.fallback_families }};
        font-size: {{ settings.type_size_paragraph }}px;
        font-weight: {{ settings.type_accent_font.weight }};
    {% endcase %}
  }

  .flexible-grid-text-{{ flexible_grid_block_id }} {
    color: {{ block.settings.text_color }};
    line-height: 1.5;
    margin: 0 0 16px 0;
    flex-grow: 1;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
    font-size: {{ settings.type_size_paragraph }}px;
    font-weight: {{ settings.type_body_font.weight }};}

  .flexible-grid-button-{{ flexible_grid_block_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
    margin-top: auto;
    font-family: {{ settings.type_body_font.family }}, {{ settings.type_body_font.fallback_families }};
  }

  .flexible-grid-button-{{ flexible_grid_block_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 1024px) {
    .flexible-grid-layout-{{ flexible_grid_block_id }} {
      {% if block.settings.layout == 'four_columns' %}
        grid-template-columns: repeat(2, 1fr);
      {% endif %}
    }
  }

  @media screen and (max-width: 768px) {
    .flexible-grid-layout-{{ flexible_grid_block_id }} {
      {% case block.settings.mobile_layout %}
        {% when '1' %}
          grid-template-columns: 1fr;
        {% when '2' %}
          grid-template-columns: repeat(2, 1fr);{% endcase %}gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .flexible-grid-container-{{ flexible_grid_block_id }} {
      {% if block.settings.container_fit == 'fit' %}
        padding: 0 16px;
      {% endif %}
    }

    .flexible-grid-item-{{ flexible_grid_block_id }} {
      padding: {{ block.settings.item_padding | times: 0.75 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .flexible-grid-layout-{{ flexible_grid_block_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="flexible-grid-{{ flexible_grid_block_id }}" {{ block.shopify_attributes }}>
  <div class="flexible-grid-container-{{ flexible_grid_block_id }}"><div class="flexible-grid-layout-{{ flexible_grid_block_id }}">{% for i in (1..8) %}
        {% liquid
          assign item_enabled_key = 'item_' | append: i | append: '_enabled'
          assign item_image_key = 'item_' | append: i | append: '_image'
          assign item_heading_key = 'item_' | append: i | append: '_heading'
          assign item_text_key = 'item_' | append: i | append: '_text'
          assign item_button_text_key = 'item_' | append: i | append: '_button_text'
          assign item_button_link_key = 'item_' | append: i | append: '_button_link'

          assign item_enabled = block.settings[item_enabled_key]
          assign item_image = block.settings[item_image_key]
          assign item_heading = block.settings[item_heading_key]
          assign item_text = block.settings[item_text_key]
          assign item_button_text = block.settings[item_button_text_key]
          assign item_button_link = block.settings[item_button_link_key]
        %}

        {% if item_enabled %}
          <div class="flexible-grid-item-{{ flexible_grid_block_id }}">
            {% if item_image != blank %}
              <div class="flexible-grid-image-{{ flexible_grid_block_id }}">
                <img
                  src="{{ item_image | image_url: width: 800 }}"
                  alt="{{ item_image.alt | escape }}"
                  loading="lazy"
                  width="{{ item_image.width }}"
                  height="{{ item_image.height }}"
                >
              </div>
            {% elsif block.settings.show_placeholder_images %}
              <div class="flexible-grid-image-{{ flexible_grid_block_id }}">
                <div class="flexible-grid-image-placeholder-{{ flexible_grid_block_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              </div>
            {% endif %}

            {% if item_heading != blank %}
              {% case block.settings.heading_type %}
                {% when 'h1' %}
                  <h1 class="flexible-grid-heading-{{ flexible_grid_block_id }}">{{ item_heading }}</h1>
                {% when 'h2' %}
                  <h2 class="flexible-grid-heading-{{ flexible_grid_block_id }}">{{ item_heading }}</h2>
                {% when 'h3' %}
                  <h3 class="flexible-grid-heading-{{ flexible_grid_block_id }}">{{ item_heading }}</h3>
                {% when 'h4' %}
                  <h4 class="flexible-grid-heading-{{ flexible_grid_block_id }}">{{ item_heading }}</h4>
                {% when 'h5' %}
                  <h5 class="flexible-grid-heading-{{ flexible_grid_block_id }}">{{ item_heading }}</h5>
                {% when 'h6' %}
                  <h6 class="flexible-grid-heading-{{ flexible_grid_block_id }}">{{ item_heading }}</h6>
                {% else %}
                  <div class="flexible-grid-heading-{{ flexible_grid_block_id }}">{{ item_heading }}</div>{% endcase %}
            {% endif %}

            {% if item_text != blank %}
              <div class="flexible-grid-text-{{ flexible_grid_block_id }}">{{ item_text }}</div>
            {% endif %}

            {% if item_button_text != blank and item_button_link != blank %}
              <a href="{{ item_button_link }}" class="flexible-grid-button-{{ flexible_grid_block_id }}">
                {{ item_button_text }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

