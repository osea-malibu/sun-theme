{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-two-columns-{{ ai_gen_id }} {
    width: 100%;
    background-color: {{ block.settings.background_color }};
    padding-top: {{ block.settings.row_padding_top }}px;
    padding-bottom: {{ block.settings.row_padding_bottom }}px;
    padding-left: {{ block.settings.row_padding_left }}px;
    padding-right: {{ block.settings.row_padding_right }}px;
  }

  .ai-two-columns-inner-{{ ai_gen_id }} {
    {% if block.settings.container_width == 'page' %}
      max-width: 1200px;margin: 0 auto;
    {% endif %}
  }

  .ai-two-columns-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.column_gap }}px;
    max-width: 100%;
  }

  .ai-two-columns-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap:16px;
    box-sizing: border-box;
  }

  .ai-two-columns-column-left-{{ ai_gen_id }} {
    padding-top: {{ block.settings.left_column_padding_top }}px;
    padding-bottom: {{ block.settings.left_column_padding_bottom }}px;
    padding-left: {{ block.settings.left_column_padding_left }}px;
    padding-right: {{ block.settings.left_column_padding_right }}px;justify-content: {{ block.settings.left_column_vertical_alignment }};text-align: {{ block.settings.left_column_text_alignment }};
  }

  .ai-two-columns-column-right-{{ ai_gen_id }} {
    padding-top: {{ block.settings.right_column_padding_top }}px;
    padding-bottom: {{ block.settings.right_column_padding_bottom }}px;
    padding-left: {{ block.settings.right_column_padding_left }}px;
    padding-right: {{ block.settings.right_column_padding_right }}px;
    justify-content: {{ block.settings.right_column_vertical_alignment }};
    text-align: {{ block.settings.right_column_text_alignment }};
  }

  .ai-two-columns-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    {% if block.settings.image_height_type == 'fixed' %}
      height: {{ block.settings.image_height }}px;
    {% else %}
      aspect-ratio: {{ block.settings.image_aspect_ratio }};
    {% endif %}
  }

  .ai-two-columns-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: {{ block.settings.image_fit }};
    object-position: center center;
  }

  .ai-two-columns-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-two-columns-image-placeholder-{{ ai_gen_id }} svg {
    width:100%;
    height: 100%;max-width: 200px;
    max-height: 200px;
  }

  .ai-two-columns-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;}

  .ai-two-columns-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    margin: 0;
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
  }

  .ai-two-columns-text-{{ ai_gen_id }} p {
    margin: 0 0 16px 0;
  }

  .ai-two-columns-text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-two-columns-{{ ai_gen_id }} {
      padding-top: {{ block.settings.row_padding_top_mobile }}px;
      padding-bottom: {{ block.settings.row_padding_bottom_mobile }}px;
      padding-left: {{ block.settings.row_padding_left_mobile }}px;
      padding-right: {{ block.settings.row_padding_right_mobile }}px;
    }

    .ai-two-columns-container-{{ ai_gen_id }} {
      display: flex;
      flex-direction: column;
      gap: {{ block.settings.column_gap_mobile }}px;
    }

    .ai-two-columns-column-left-{{ ai_gen_id }} {
      padding-top: {{ block.settings.left_column_padding_top_mobile }}px;
      padding-bottom: {{ block.settings.left_column_padding_bottom_mobile }}px;
      padding-left: {{ block.settings.left_column_padding_left_mobile }}px;
      padding-right: {{ block.settings.left_column_padding_right_mobile }}px;
      text-align: {{ block.settings.left_column_text_alignment_mobile }};
    }

    .ai-two-columns-column-right-{{ ai_gen_id }} {
      padding-top: {{ block.settings.right_column_padding_top_mobile }}px;
      padding-bottom: {{ block.settings.right_column_padding_bottom_mobile }}px;
      padding-left: {{ block.settings.right_column_padding_left_mobile }}px;
      padding-right: {{ block.settings.right_column_padding_right_mobile }}px;
      text-align: {{ block.settings.right_column_text_alignment_mobile }};
    }

    .ai-two-columns-image-wrapper-{{ ai_gen_id }} {
      {% if block.settings.image_height_type == 'fixed' %}
        height: {{ block.settings.image_height_mobile }}px;
      {% endif %}
    }

    {% if block.settings.mobile_layout == 'image_first' %}
      {% if block.settings.left_column_image %}
        .ai-two-columns-column-left-{{ ai_gen_id }} { order: -1; }
      {% elsif block.settings.right_column_image %}
        .ai-two-columns-column-right-{{ ai_gen_id }} { order: -1; }
      {% endif %}
    {% elsif block.settings.mobile_layout == 'text_first' %}
      {% assign left_has_text = false %}
      {% if block.settings.left_column_heading != blank or block.settings.left_column_text != blank %}
        {% assign left_has_text = true %}
      {% endif %}
      {% assign right_has_text = false %}
      {% if block.settings.right_column_heading != blank or block.settings.right_column_text != blank %}
        {% assign right_has_text = true %}
      {% endif %}
      {% if left_has_text and right_has_text == false %}
        .ai-two-columns-column-left-{{ ai_gen_id }} { order: -1; }
      {% elsif right_has_text and left_has_text == false %}
        .ai-two-columns-column-right-{{ ai_gen_id }} { order: -1; }
      {% endif %}
    {% endif %}
  }
{% endstyle %}

<div class="ai-two-columns-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-two-columns-inner-{{ ai_gen_id }}"><div class="ai-two-columns-container-{{ ai_gen_id }}"><div class="ai-two-columns-column-{{ ai_gen_id }} ai-two-columns-column-left-{{ ai_gen_id }}">
        {% if block.settings.left_column_image %}
          <div class="ai-two-columns-image-wrapper-{{ ai_gen_id }}"><img src="{{ block.settings.left_column_image | image_url: width: 1200 }}"
              alt="{{ block.settings.left_column_image.alt | escape }}"
              class="ai-two-columns-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.left_column_image.width }}"
              height="{{ block.settings.left_column_image.height }}"
            >
          </div>
        {% elsif block.settings.left_column_show_placeholder %}
          <div class="ai-two-columns-image-wrapper-{{ ai_gen_id }}">
            <div class="ai-two-columns-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          </div>
        {% endif %}

        {% if block.settings.left_column_heading != blank %}
          <h2 class="ai-two-columns-heading-{{ ai_gen_id }}">{{ block.settings.left_column_heading }}</h2>
        {% endif %}

        {% if block.settings.left_column_text != blank %}
          <div class="ai-two-columns-text-{{ ai_gen_id }}">{{ block.settings.left_column_text }}</div>
        {% endif %}
      </div>

      <div class="ai-two-columns-column-{{ ai_gen_id }} ai-two-columns-column-right-{{ ai_gen_id }}">
        {% if block.settings.right_column_image %}
          <div class="ai-two-columns-image-wrapper-{{ ai_gen_id }}">
            <img
              src="{{ block.settings.right_column_image | image_url: width: 1200 }}"
              alt="{{ block.settings.right_column_image.alt | escape }}"
              class="ai-two-columns-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.right_column_image.width }}"
              height="{{ block.settings.right_column_image.height }}"
            >
          </div>
        {% elsif block.settings.right_column_show_placeholder %}
          <div class="ai-two-columns-image-wrapper-{{ ai_gen_id }}">
            <div class="ai-two-columns-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          </div>
        {% endif %}

        {% if block.settings.right_column_heading != blank %}
          <h2 class="ai-two-columns-heading-{{ ai_gen_id }}">{{ block.settings.right_column_heading }}</h2>
        {% endif %}

        {% if block.settings.right_column_text != blank %}
          <div class="ai-two-columns-text-{{ ai_gen_id }}">{{ block.settings.right_column_text }}</div>
        {% endif %}
