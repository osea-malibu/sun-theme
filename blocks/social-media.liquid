{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-social-block-{{ ai_gen_id }} {
    width: 100%;
    margin: {{ block.settings.block_margin_top }}px 0 {{ block.settings.block_margin_bottom }}px;
    padding: {{ block.settings.block_padding_top }}px 0 {{ block.settings.block_padding_bottom }}px;
    text-align: {{ block.settings.alignment }};
  }

  .ai-social-block__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    color: {{ block.settings.title_color }};
    margin-bottom: {{ block.settings.title_margin_bottom }}px;
    {% if block.settings.title_text == blank %}
      display: none;
    {% endif %}
  }

  .ai-social-block__container-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: {{ block.settings.icon_gap }}px;
    {% if block.settings.alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
  }

  .ai-social-block__link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    border-radius: {{ block.settings.icon_border_radius }}px;
    transition: all 0.3s ease;
    text-decoration: none;
    position: relative;
    overflow: hidden;
    {% if block.settings.icon_style == 'filled' %}
      background-color: {{ block.settings.icon_background_color }};
      border: {{ block.settings.border_width }}px solid {{ block.settings.icon_border_color }};
    {% elsif block.settings.icon_style == 'outlined' %}
      background-color: transparent;
      border: {{ block.settings.border_width }}px solid {{ block.settings.icon_border_color }};
    {% else %}
      background-color: transparent;
      border: none;
    {% endif %}
  }

  .ai-social-block__link-{{ ai_gen_id }}:hover {
    transform: {{ block.settings.hover_effect }};
    {% if block.settings.icon_style == 'filled' %}
      background-color: {{ block.settings.icon_hover_background_color }};
      border-color: {{ block.settings.icon_hover_border_color }};
    {% elsif block.settings.icon_style == 'outlined' %}
      background-color: {{ block.settings.icon_hover_background_color }};
      border-color: {{ block.settings.icon_hover_border_color }};
    {% endif %}
  }

  .ai-social-block__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size | minus: 16 }}px;
    height: {{ block.settings.icon_size | minus: 16 }}px;
    fill: {{ block.settings.icon_color }};
    transition: fill 0.3s ease;
  }

  .ai-social-block__link-{{ ai_gen_id }}:hover .ai-social-block__icon-{{ ai_gen_id }} {
    fill: {{ block.settings.icon_hover_color }};
  }

  .ai-social-block__link-{{ ai_gen_id }}.brand-facebook:hover {
    {% if block.settings.use_brand_colors %}
      background-color: #1877F2;
      border-color: #1877F2;
    {% endif %}
  }

  .ai-social-block__link-{{ ai_gen_id }}.brand-instagram:hover {
    {% if block.settings.use_brand_colors %}
      background: linear-gradient(45deg, #F58529, #DD2A7B, #8134AF, #515BD4);
      border-color: #F58529;
    {% endif %}
  }

  .ai-social-block__link-{{ ai_gen_id }}.brand-twitter:hover {
    {% if block.settings.use_brand_colors %}
      background-color: #000000;
      border-color: #000000;
    {% endif %}
  }

  .ai-social-block__link-{{ ai_gen_id }}.brand-linkedin:hover {
    {% if block.settings.use_brand_colors %}
      background-color: #0A66C2;
      border-color: #0A66C2;
    {% endif %}
  }

  .ai-social-block__link-{{ ai_gen_id }}.brand-youtube:hover {
    {% if block.settings.use_brand_colors %}
      background-color: #FF0000;
      border-color: #FF0000;
    {% endif %}
  }

  .ai-social-block__link-{{ ai_gen_id }}.brand-tiktok:hover {
    {% if block.settings.use_brand_colors %}
      background-color: #000000;
      border-color: #000000;
    {% endif %}
  }

  .ai-social-block__link-{{ ai_gen_id }}.brand-pinterest:hover {
    {% if block.settings.use_brand_colors %}
      background-color: #E60023;
      border-color: #E60023;
    {% endif %}
  }

  .ai-social-block__link-{{ ai_gen_id }}.brand-snapchat:hover {
    {% if block.settings.use_brand_colors %}
      background-color: #FFFC00;
      border-color: #FFFC00;
    {% endif %}
  }

  .ai-social-block__link-{{ ai_gen_id }}.brand-discord:hover {
    {% if block.settings.use_brand_colors %}
      background-color: #5865F2;
      border-color: #5865F2;
    {% endif %}
  }

  .ai-social-block__link-{{ ai_gen_id }}.brand-whatsapp:hover {
    {% if block.settings.use_brand_colors %}
      background-color: #25D366;
      border-color: #25D366;
    {% endif %}
  }

  {% if block.settings.use_brand_colors %}
    .ai-social-block__link-{{ ai_gen_id }}:hover .ai-social-block__icon-{{ ai_gen_id }} {
      fill: #ffffff;
    }
  {% endif %}

  @media screen and (max-width: 768px) {
    .ai-social-block__container-{{ ai_gen_id }} {
      gap: {{ block.settings.mobile_icon_gap }}px;
    }
    
    .ai-social-block__link-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size }}px;
      height: {{ block.settings.mobile_icon_size }}px;
    }
    
    .ai-social-block__icon-{{ ai_gen_id }} {
      width: {{ block.settings.mobile_icon_size | minus: 12 }}px;
      height: {{ block.settings.mobile_icon_size | minus: 12 }}px;
    }
  }
{% endstyle %}

