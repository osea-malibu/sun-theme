{% doc %}
  @prompt
    Can we add a section of either 2 columns or one, full page or fit, for text and or image?
    but I would like if that section get hidden under the footer when scrolling over.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-content-section-{{ ai_gen_id }} {
    position: relative;
    z-index: 1;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    {% if block.settings.width == 'full' %}
      width: 100vw;
      margin-left: calc(-50vw + 50%);
    {% endif %}
  }

  .ai-content-section__container-{{ ai_gen_id }} {
    {% unless block.settings.width == 'full' %}
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    {% else %}
      padding: 0 40px;
    {% endunless %}
  }

  .ai-content-section__grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.gap }}px;
    align-items: {{ block.settings.vertical_alignment }};{% if block.settings.columns == '1' %}
      grid-template-columns: 1fr;
    {% else %}
      grid-template-columns: 1fr 1fr;
    {% endif %}
  }

  .ai-content-section__column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap:16px;
  }

  .ai-content-section__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0;
    line-height: 1.2;
  }

  .ai-content-section__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  .ai-content-section__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-content-section__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-content-section__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 300px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-content-section__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-content-section__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;align-self: flex-start;
  }

  .ai-content-section__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  @media screen and (max-width: 749px) {
    .ai-content-section__grid-{{ ai_gen_id }} {
      {% if block.settings.columns_mobile == '1' %}
        grid-template-columns: 1fr;
      {% else %}
        grid-template-columns: 1fr 1fr;
      {% endif %}
      gap: {{ block.settings.gap | divided_by: 2 }}px;
    }

    .ai-content-section__container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-content-section__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-content-section__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div 
  class="ai-content-section-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-content-section__container-{{ ai_gen_id }}">
    <div class="ai-content-section__grid-{{ ai_gen_id }}">
      {% if block.settings.column_1_content !='none' %}
        <div class="ai-content-section__column-{{ ai_gen_id }}">
          {% if block.settings.column_1_content == 'text' or block.settings.column_1_content == 'both' %}
            {% if block.settings.column_1_heading != blank %}
              <h2 class="ai-content-section__heading-{{ ai_gen_id }}">{{ block.settings.column_1_heading }}</h2>
            {% endif %}
            {% if block.settings.column_1_text != blank %}
              <div class="ai-content-section__text-{{ ai_gen_id }}">{{ block.settings.column_1_text }}</div>
            {% endif %}
            {% if block.settings.column_1_button_text != blank and block.settings.column_1_button_url != blank %}
              <a href="{{ block.settings.column_1_button_url }}" class="ai-content-section__button-{{ ai_gen_id }}">
                {{ block.settings.column_1_button_text }}
              </a>
            {% endif %}
          {% endif %}
          {% if block.settings.column_1_content == 'image' or block.settings.column_1_content == 'both' %}
            <div class="ai-content-section__image-wrapper-{{ ai_gen_id }}">
              {% if block.settings.column_1_image %}
                <img
                  src="{{ block.settings.column_1_image | image_url: width: 800 }}"
                  alt="{{ block.settings.column_1_image.alt | escape }}"
                  class="ai-content-section__image-{{ ai_gen_id }}"
                loading="lazy"
                  width="{{ block.settings.column_1_image.width }}"
                  height="{{ block.settings.column_1_image.height }}"
                >
              {% else %}
                <div class="ai-content-section__image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.columns == '2' and block.settings.column_2_content != 'none' %}
        <div class="ai-content-section__column-{{ ai_gen_id }}">
          {% if block.settings.column_2_content == 'text' or block.settings.column_2_content == 'both' %}
            {% if block.settings.column_2_heading != blank %}
              <h2 class="ai-content-section__heading-{{ ai_gen_id }}">{{ block.settings.column_2_heading }}</h2>
            {% endif %}
            {% if block.settings.column_2_text != blank %}
              <div class="ai-content-section__text-{{ ai_gen_id }}">{{ block.settings.column_2_text }}</div>
            {% endif %}
            {% if block.settings.column_2_button_text != blank and block.settings.column_2_button_url != blank %}
              <a href="{{ block.settings.column_2_button_url }}" class="ai-content-section__button-{{ ai_gen_id }}">
                {{ block.settings.column_2_button_text }}
              </a>
            {% endif %}
          {% endif %}
          {% if block.settings.column_2_content == 'image' or block.settings.column_2_content == 'both' %}
            <div class="ai-content-section__image-wrapper-{{ ai_gen_id }}">
              {% if block.settings.column_2_image %}
                <img
                  src="{{ block.settings.column_2_image | image_url: width: 800 }}"
                  alt="{{ block.settings.column_2_image.alt | escape }}"
                  class="ai-content-section__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="{{ block.settings.column_2_image.width }}"
                  height="{{ block.settings.column_2_image.height }}"
                >
              {% else %}
                <div class="ai-content-section__image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

