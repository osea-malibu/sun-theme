  .ai-content-section__grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.gap }}px;
    align-items: {{ block.settings.vertical_alignment }};
    {% if block.settings.columns == '1' %}
      grid-template-columns: 1fr;
    {% else %}
      grid-template-columns: 1fr 1fr;
    {% endif %}
