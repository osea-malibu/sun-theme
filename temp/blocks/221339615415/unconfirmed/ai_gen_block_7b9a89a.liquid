    position: relative;
    z-index: 1;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    {% if block.settings.width == 'full' %}
      width: 100vw;
      margin-left: calc(-50vw + 50%);
    {% endif %}
  }

  .ai-content-section__container-{{ ai_gen_id }} {
    {% if block.settings.width == 'full' %}
      max-width: none;
      padding: 0 40px;
    {% else %}
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    {% endif %}
