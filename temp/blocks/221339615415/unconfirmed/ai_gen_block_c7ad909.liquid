{% doc %}
  @prompt
    I would love a section that could be a full width, two columns or three column, we could also make it a 2 rows, 2 columns. All must be responsive. And it must take image, text or other blocks.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-flexible-grid-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-flexible-grid-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-flexible-grid-layout-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.grid_gap }}px;
    {% case block.settings.layout %}
      {% when 'one_column' %}
        grid-template-columns: 1fr;
      {% when 'two_columns' %}
        grid-template-columns: repeat(2, 1fr);
      {% when 'three_columns' %}
        grid-template-columns: repeat(3, 1fr);
      {% when 'two_rows_two_columns' %}
        grid-template-columns: repeat(2, 1fr);
        grid-template-rows: repeat(2, auto);
    {% endcase %}
  }

  .ai-flexible-grid-item-{{ ai_gen_id }} {
    background-color: {{ block.settings.item_background_color }};
    border-radius: {{ block.settings.item_border_radius }}px;
    padding: {{ block.settings.item_padding }}px;
    {% if block.settings.item_border_width > 0 %}
      border: {{ block.settings.item_border_width }}px solid {{ block.settings.item_border_color }};
    {% endif %}
    {% if block.settings.item_shadow %}
      box-shadow:0 4px 8px rgba(0, 0, 0, 0.1);
    {% endif %}
    display: flex;
    flex-direction: column;
    align-items: {{ block.settings.content_alignment }};
    text-align: {{ block.settings.text_alignment }};
    min-height: {{ block.settings.min_item_height }}px;
  }

  .ai-flexible-grid-image-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: 16px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-flexible-grid-image-{{ ai_gen_id }} img {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
    display: block;
  }

  .ai-flexible-grid-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-flexible-grid-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-flexible-grid-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    margin: 0 0 12px 0;
    line-height: 1.2;
  }

  .ai-flexible-grid-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0 0 16px 0;
    flex-grow: 1;
  }

  .ai-flexible-grid-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s ease;
    margin-top: auto;
  }

  .ai-flexible-grid-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-flexible-grid-layout-{{ ai_gen_id }} {
      {% case block.settings.mobile_layout %}
        {% when '1' %}
          grid-template-columns: 1fr;
        {% when '2' %}
          grid-template-columns: repeat(2, 1fr);
      {% endcase %}
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-flexible-grid-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-flexible-grid-item-{{ ai_gen_id }} {
      padding: {{ block.settings.item_padding | times: 0.75 }}px;
    }

    .ai-flexible-grid-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-flexible-grid-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-flexible-grid-layout-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="ai-flexible-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-flexible-grid-container-{{ ai_gen_id }}">
    <div class="ai-flexible-grid-layout-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign item_enabled_key = 'item_' | append: i | append: '_enabled'
          assign item_image_key = 'item_' | append: i | append: '_image'
          assign item_heading_key = 'item_' | append: i | append: '_heading'
          assign item_text_key = 'item_' | append: i | append: '_text'
          assign item_button_text_key = 'item_' | append: i | append: '_button_text'
          assign item_button_link_key = 'item_' | append: i | append: '_button_link'

          assign item_enabled = block.settings[item_enabled_key]
          assign item_image = block.settings[item_image_key]
          assign item_heading = block.settings[item_heading_key]
          assign item_text = block.settings[item_text_key]
          assign item_button_text = block.settings[item_button_text_key]
          assign item_button_link = block.settings[item_button_link_key]
        %}

        {% if item_enabled %}
          <div class="ai-flexible-grid-item-{{ ai_gen_id }}">
            {% if item_image != blank %}
              <div class="ai-flexible-grid-image-{{ ai_gen_id }}">
                <img
                  src="{{ item_image | image_url: width: 800 }}"
                  alt="{{ item_image.alt | escape }}"
                  loading="lazy"
                  width="{{ item_image.width }}"
                  height="{{ item_image.height }}"
                >
              </div>
            {% elsif block.settings.show_placeholder_images %}
              <div class="ai-flexible-grid-image-{{ ai_gen_id }}">
                <div class="ai-flexible-grid-image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              </div>
            {% endif %}

            {% if item_heading != blank %}
              <h3 class="ai-flexible-grid-heading-{{ ai_gen_id }}">{{ item_heading }}</h3>
            {% endif %}

            {% if item_text != blank %}
              <div class="ai-flexible-grid-text-{{ ai_gen_id }}">{{ item_text }}</div>
            {% endif %}

            {% if item_button_text != blank and item_button_link != blank %}
              <a href="{{ item_button_link }}" class="ai-flexible-grid-button-{{ ai_gen_id }}">
                {{ item_button_text }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

