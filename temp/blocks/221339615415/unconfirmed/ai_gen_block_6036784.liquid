  }

  .ai-dual-signup__error-message-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    font-size: 14px;
    margin-top: 8px;
    display: none;
  }

  .ai-dual-signup__error-message-{{ ai_gen_id }}.show {
    display: block;
  }

  .ai-dual-signup__success-message-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    font-size: 16px;
    text-align: center;
    padding: 16px;
    background-color: rgba({{ block.settings.success_color | color_extract: 'red' }}, {{ block.settings.success_color | color_extract: 'green' }}, {{ block.settings.success_color | color_extract: 'blue' }}, 0.1);
    border-radius: {{ block.settings.border_radius }}px;
    margin-top: 12px;
    display: none;
  }

  .ai-dual-signup__success-message-{{ ai_gen_id }}.show {
    display: block;
  }

  @media screen and (max-width: 749px) {
    .ai-dual-signup__form-row-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 12px;
    }

    .ai-dual-signup__button-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-dual-signup__phone-wrapper-{{ ai_gen_id }} {
      flex-direction: column;
      gap: 12px;
    }

    .ai-dual-signup__country-select-{{ ai_gen_id }} {
      width: 100%;
    }
  }
