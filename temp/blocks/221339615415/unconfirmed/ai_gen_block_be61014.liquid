{% doc %}
  @prompt
    can you give me a two column section?

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-two-column-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-two-column-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-two-column-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.column_gap }}px;
    align-items: {{ block.settings.vertical_alignment }};
  }

  .ai-two-column-item-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
  }

  .ai-two-column-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    margin-bottom: 20px;
  }

  .ai-two-column-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-two-column-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4/3;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-two-column-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-two-column-content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
  }

  .ai-two-column-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-two-column-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0 0 20px;
  }

  .ai-two-column-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: background-color 0.3s ease;
    font-weight: 500;
  }

  .ai-two-column-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-two-column-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .ai-two-column-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-two-column-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-two-column-container-{{ ai_gen_id }}">
    <div class="ai-two-column-grid-{{ ai_gen_id }}">
      <div class="ai-two-column-item-{{ ai_gen_id }}">
        {% if block.settings.image_1 %}
          <div class="ai-two-column-image-wrapper-{{ ai_gen_id }}">
            <img
              src="{{ block.settings.image_1 | image_url: width: 600 }}"
              alt="{{ block.settings.image_1.alt | escape }}"
              class="ai-two-column-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.image_1.width }}"
              height="{{ block.settings.image_1.height }}"
            >
          </div>
        {% elsif block.settings.heading_1 != blank or block.settings.text_1 != blank %}
          <div class="ai-two-column-image-wrapper-{{ ai_gen_id }}">
            <div class="ai-two-column-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          </div>
        {% endif %}<div class="ai-two-column-content-{{ ai_gen_id }}">
          {% if block.settings.heading_1 != blank %}
            <h2 class="ai-two-column-heading-{{ ai_gen_id }}">{{ block.settings.heading_1 }}</h2>
          {% endif %}

          {% if block.settings.text_1 != blank %}
            <div class="ai-two-column-text-{{ ai_gen_id }}">{{ block.settings.text_1 }}</div>
          {% endif %}

          {% if block.settings.button_text_1 != blank and block.settings.button_link_1 != blank %}
            <a href="{{ block.settings.button_link_1 }}" class="ai-two-column-button-{{ ai_gen_id }}">
              {{ block.settings.button_text_1 }}
            </a>
          {% endif %}
        </div>
      </div>

      <div class="ai-two-column-item-{{ ai_gen_id }}">
        {% if block.settings.image_2 %}
          <div class="ai-two-column-image-wrapper-{{ ai_gen_id }}">
            <img
              src="{{ block.settings.image_2 | image_url: width: 600 }}"
              alt="{{ block.settings.image_2.alt | escape }}"
              class="ai-two-column-image-{{ ai_gen_id }}"
              loading="lazy"
              width="{{ block.settings.image_2.width }}"
              height="{{ block.settings.image_2.height }}"
            >
          </div>
        {% elsif block.settings.heading_2 != blank or block.settings.text_2 != blank %}
          <div class="ai-two-column-image-wrapper-{{ ai_gen_id }}">
            <div class="ai-two-column-image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          </div>
        {% endif %}

        <div class="ai-two-column-content-{{ ai_gen_id }}">
          {% if block.settings.heading_2 != blank %}
            <h2 class="ai-two-column-heading-{{ ai_gen_id }}">{{ block.settings.heading_2 }}</h2>
          {% endif %}

          {% if block.settings.text_2 != blank %}
            <div class="ai-two-column-text-{{ ai_gen_id }}">{{ block.settings.text_2 }}</div>
          {% endif %}

          {% if block.settings.button_text_2 != blank and block.settings.button_link_2 != blank %}
            <a href="{{ block.settings.button_link_2 }}" class="ai-two-column-button-{{ ai_gen_id }}">
              {{ block.settings.button_text_2 }}
            </a>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>

